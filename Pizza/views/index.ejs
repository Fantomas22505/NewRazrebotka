        <div class="card col-3 m-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= order.orderNumber %></h5>
        <p class="card-text"> information about order.</p>
        <a href="/pizzas/<%= order.id %>" class="btn btn-primary">Detail</a>
      </div>
    </div>
    <% } %>

    </div>
    <div class="row">
      <a href="/addOrder">Добавить заказ</a>
      <a href="/addPizza">Добавить пиццу</a>
    </div>

      </div>
  </body>
</html>
